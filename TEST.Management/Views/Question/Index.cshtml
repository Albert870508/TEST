                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            try
                            {
                                <tr id="@item.Id">
                                    <td style="vertical-align:middle">
                                        @Html.CheckBox("QuestionSelect", false, new { caId = item.Id })
                                    </td>
                                    <td style="vertical-align:middle">
