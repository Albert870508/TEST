                                    <td style="vertical-align:middle">
                                    </td>
                                </tr>
                            }
                            catch
                            {
                                <script>
                                   $("#@item.Id").remove();
                                </script>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td class="text-muted" colspan="4">
